doi = {10.1016/J.GDE.2018.05.009},
file = {:Users/luke/Library/Application Support/Mendeley Desktop/Downloaded/Dannemann, Racimo - 2018 - Something old, something borrowed admixture and adaptation in human evolution.pdf:pdf},
