file = {:Users/luke/Library/Application Support/Mendeley Desktop/Downloaded/Palamara et al. - 2015 - Leveraging Distant Relatedness to Quantify Human Mutation and Gene-Conversion Rates.pdf:pdf},
issn = {0002-9297},
journal = {The American Journal of Human Genetics},
month = {dec},
